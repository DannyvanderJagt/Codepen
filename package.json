{
  "name": "Codepen",
  "version": "0.0.1",
  "description": "Codepen Desktop Client",
  "main": "app/main-process/index.js",
  "scripts": {
    "compile": "gulp",
    "app": "electron .",
    "pack": "build --dir --mac",
    "dist": "build --mac",
    "postinstall": "install-app-deps"
  },
  "author": "Danny van der Jagt",
  "license": "MIT",
  "devDependencies": {
    "appdmg": "^0.4.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "electron": "^1.3.4",
    "electron-builder": "^6.1.0",
    "fs-extra": "^0.30.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-plumber": "^1.1.0",
    "gulp-pug": "^3.0.4",
    "gulp-sass": "^2.3.2",
    "gulp-sequence": "^0.4.6",
    "through2": "^2.0.1"
  },
  "build": {
    "appId": "com.codepen.app",
    "category": "public.app-category.developer-tools",
    "dmg": {
      "title": "Codepen Installer",
      "contents": [
        {
          "x": 490,
          "y": 245,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 155,
          "y": 245,
          "type": "file",
          "path": "Codepen.app"
        }
      ]
    }
  }
}
